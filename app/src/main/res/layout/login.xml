<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iconlogin"
        android:layout_width="270dp"
        android:layout_height="258dp"
        android:layout_margin="100dp"
        android:layout_marginVertical="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/mypillsicon"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="210dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_with_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconlogin"
    />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaologin"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/rounded_with_border"
        android:text="Olá, como está? :)"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:onClick="sendMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>